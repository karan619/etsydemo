<h2 class="text-center">Sales History</h2>
<table class="table table-striped table-bordered">
	<tr>
		<th class="text-center">Image</th>
		<th class="text-center">Item</th>
		<th class="text-center">Description</th>
		<th class="text-center">Price</th>
		<th class="text-center">Customer</th>
		<th class="text-center">Date Sold</th>
	</tr>
	<% @orders.each do |order| %>
	<tr class="text-center">
		<td><%= image_tag order.listing.image.url(:thumb) %></td>
		<td><%= order.listing.name %></td>
		<td><%= order.listing.description %></td>
		<td><%= number_to_currency(order.listing.price, unit: "â‚¹") %></td>
		<td><%= order.buyer.name %></td>
		<td><%= order.created_at.strftime("%B %-d, %Y") %></td>
	</tr>
	<% end %>
</table>


<br />

<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" if user_signed_in? %>